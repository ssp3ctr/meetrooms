class Milling:
    def CalculateMilling(self):
        print("Method 1")
    def ValidateMilling(self):
        return True

class Drilling:
    def CalculateDrilling(self):
        print("Method 2")
        
class Cut:
    def CalculateCut(self):
        print("Method 3")        

class Hole(Drilling, Milling):
    def ValidateHole(self):
        print("Validate hole")
        return True
    pass

class Pocket(Drilling, Milling, Cut):
    def ValidateHole(self):
        print("Validate hole")
        return True
    pass

Hole = Hole()
    
if Hole.ValidateHole() and Hole.ValidateMilling():
    Hole.CalculateMilling() 

Pocket = Pocket()

result_milling = Pocket.CalculateMilling()
result_drilling = Pocket.CalculateDrilling()
result_cut = Pocket.CalculateCut()